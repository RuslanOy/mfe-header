{
  "name": "mfe-header",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "webpack serve --config webpack.config.js --mode development --open",
    "build": "webpack --config webpack.config.js --mode production",
    "clean": "rm -rf dist",
    "lint": "eslint --debug src/ --ext .js,.jsx,.ts,.tsx .",
    "lint:write": "eslint --debug src/ --fix",
    "prepare": "husky || true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.0",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "babel-loader": "^9.1.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-webpack-plugin": "^5.0.1",
    "globals": "^16.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.30.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1",
    "webpack-merge": "^6.0.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
